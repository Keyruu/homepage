---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import TableOfContents from "../components/TableOfContents.astro";

interface Props {
  post: CollectionEntry<"blog">["data"];
  headings: import("astro").MarkdownHeading[];
  readingTime: string;
}

const { post, headings, readingTime } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={post.title} description={post.description} />
    <style>
      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 100%;
        margin: 0 auto;
        width: calc(100% - 2em);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-light));
        position: relative;
      }
      .toc-container {
        position: fixed;
        top: 1rem;
        margin-left: 60rem;
        margin-top: 10rem;
        width: 250px;
        max-height: 90vh;
        overflow-y: auto;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        .toc-container {
          display: none;
        }
        .prose {
          padding: 0.5em;
        }
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      /* Markdown content styles (slotted, so need :global) */
      .prose :global(pre) {
        padding: 1.5em;
        border-radius: 8px;
        border: 1px solid rgba(var(--gray-light), 50%);
        margin-bottom: 1em;
      }
      .prose :global(code) {
        padding: 2px 5px;
        font-size: 1.1rem;
        background-color: rgb(var(--gray-dark));
        border-radius: 2px;
      }
      .prose :global(pre > code) {
        all: unset;
      }
      .prose :global(blockquote) {
        border-left: 4px solid var(--accent);
        padding: 0 0 0 20px;
        margin-bottom: 1em;
        font-size: 1.1em;
        margin-left: 0;
      }
      .prose :global(a.internal) {
        background: rgb(var(--gray-dark));
        border-radius: 0.4em;
        padding: 0.05em 0.2em;
        text-decoration: none;
        font-weight: 600;
        display: inline-block;
        transition: background 0.2s;
      }
      .prose :global(.icon-link::before) {
        content: "#";
        font-size: 0.85em;
        vertical-align: middle;
        color: rgb(var(--gray));
        margin-right: 10px;
      }
      .prose :global(a:hover .icon-link::before) {
        color: var(--highlight);
      }
      .prose :global(a[aria-hidden="true"]) {
        text-decoration: none;
      }
      .prose :global(svg.external-icon) {
        display: inline-block;
        vertical-align: middle;
        margin-left: 0.2em;
        margin-right: 0.2em;
        height: 0.5em;
        width: 0.5em;
        fill: rgb(var(--gray));
      }

      /* Callout styles */
      .prose :global([data-callout][data-callout-type="info"]) {
        border-left: 4px solid var(--accent);
        background-color: rgba(30, 45, 70, 0.6);
        border-radius: 8px;
        margin: 1em 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
        color: var(--foreground);
      }
      .prose :global([data-callout-type="info"] > [data-callout-title]) {
        background-color: rgba(43, 101, 255, 0.15);
        padding: 0.5em 1em;
        font-weight: bold;
        color: var(--accent);
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        font-size: 1rem;
        letter-spacing: 0.5px;
      }
      .prose :global([data-callout-type="info"] > [data-callout-body]) {
        padding: 0.75em 1em;
        color: rgba(220, 230, 245, 0.85);
      }
      .prose :global([data-callout-type="info"] > [data-callout-body] > p) {
        margin-bottom: 1em;
      }

      /* Code block line numbers */
      .prose :global(.astro-code) {
        font-size: 1rem;
        counter-reset: step;
        counter-increment: step 0;
      }
      .prose :global(.astro-code .line::before) {
        content: counter(step);
        counter-increment: step;
        width: 1rem;
        margin-right: 1.5rem;
        display: inline-block;
        text-align: right;
        color: rgba(115, 138, 148, 0.4);
      }

      @media (max-width: 720px) {
        .prose :global(pre.astro-code) {
          font-size: 0.85rem;
          padding: 1em;
        }
        .prose :global(.astro-code .line::before) {
          width: 0.75rem;
          margin-right: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <div class="toc-container">
        <TableOfContents headings={headings} />
      </div>
      <article class="prose">
        <section>
          <div class="title">
            <div class="date">
              {post.pubDate && <FormattedDate date={post.pubDate} />} â€¢ {readingTime}
              {
                post.updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={post.updatedDate} />
                  </div>
                )
              }
            </div>
            <h1 id="title">{post.title}</h1>
            <hr />
          </div>
        </section>
        <slot />
      </article>
    </main>
    <Footer />
  </body><script>
    // thanks a lot to Kevin Drum mostly copied from his blog post here: https://kld.dev/toc-animation/
    const linkStarts = new WeakMap<HTMLAnchorElement, number>();
    const linkEnds = new WeakMap<HTMLAnchorElement, number>();
    let lastArrowPosition = { x: 0, y: 0 };

    // store timeout ID to manage arrowhead opacity changes
    let arrowheadTimeout: NodeJS.Timeout | null = null;

    addIntersectionObserver();
    addResizeObserver();

    function addIntersectionObserver() {
      const observer = new IntersectionObserver((sections) => {
        sections.forEach((section) => {
          const heading = section.target.querySelector("h1, h2, h3, h4");
          if (!heading) return;
          const id = heading.getAttribute("id");

          // get the link to this section's heading
          const link = document.querySelector(`nav.toc li a[href="#${id}"]`);
          if (!link) return;

          // add/remove the .active class based on whether the
          // section is visible
          const addRemove = section.intersectionRatio > 0 ? "add" : "remove";
          link.classList[addRemove]("active");
        });
        updatePath();
      });

      document.querySelectorAll("article section").forEach((section) => {
        observer.observe(section);
      });
    }

    function addResizeObserver() {
      const tocNav = document.querySelector("nav.toc");
      if (!tocNav) return;
      const observer = new ResizeObserver(() => {
        drawPath();
        updatePath();
      });
      observer.observe(tocNav);
    }

    function drawPath() {
      const path = document.querySelector("path.toc-marker") as SVGPathElement | null;
      if (!path) return;
      const links = Array.from(document.querySelectorAll("nav.toc a"));
      if (!links.length) return;

      // Start with an empty array of path data values (joined with
      // spaces later)
      let pathData = [];
      let left = 0; // The last x position / indentation

      // Iterate over each link to build up the pathData
      links.forEach((el, i) => {
        const link = el as HTMLAnchorElement;
        const x = link.offsetLeft;
        const y = link.offsetTop;
        const height = link.offsetHeight - 1;
        if (i === 0) {
          // The top of the first link starts at 0px along the path.
          linkStarts.set(link, 0);
          // Like drawing with a pen...
          // 'M'ove to the top left of the first link,
          // and then draw a 'L'ine to the bottom left
          pathData.push("M", x, y, "L", x, y + height);
        } else {
          // If the current link is indented differently than the last,
          // then come down to the current link's top before moving
          // left or right. This ensures we get 90-degrees angle at the
          // corners.
          if (left !== x) pathData.push("L", left, y);

          // Draw a line to the top left of the current link
          pathData.push("L", x, y);

          // Apply the current path data to the path element
          path.setAttribute("d", pathData.join(" "));

          // Get the total length of the path now that it extends
          // to the top of this link, and store it in our linkStarts
          // WeakMap.
          linkStarts.set(link, path.getTotalLength());

          // Draw a line to the bottom left of the current link
          pathData.push("L", x, y + height);
        }

        // Save the current link's x position to compare with the next
        // link
        left = x;

        // Apply the current path data to the path element again
        path.setAttribute("d", pathData.join(" "));

        // Get the length of the path that now extends to the
        // bottom of this link, and store it in our linkEnds WeakMap.
        linkEnds.set(link, path.getTotalLength());
      });
    }

    function clearArrowheadTimeout(): void {
      if (arrowheadTimeout) {
        clearTimeout(arrowheadTimeout);
        arrowheadTimeout = null;
      }
    }

    function updatePath() {
      const path = document.querySelector("path.toc-marker") as SVGPathElement | null;
      const arrowhead = document.querySelector(".toc-arrowhead") as SVGPolygonElement | null;
      if (!path || !arrowhead) return;
      const pathLength = path.getTotalLength();
      const activeLinks = document.querySelectorAll(
        "nav.toc a.active",
      ) as NodeListOf<HTMLAnchorElement>;
      const allLinks = document.querySelectorAll("nav.toc a") as NodeListOf<HTMLAnchorElement>;

      let linkStart = pathLength;
      let linkEnd = 0;
      activeLinks.forEach((link) => {
        // Set linkStart to the top of the earliest active link
        linkStart = Math.min(linkStart, linkStarts.get(link) ?? pathLength);
        // Set linkEnd to the bottom of the furthest active link
        linkEnd = Math.max(linkEnd, linkEnds.get(link) ?? 0);
      });

      // If there are no active links, hide the path
      if (!activeLinks.length) {
        clearArrowheadTimeout(); // Clear any pending timeout
        path.style.display = "none";
        arrowhead.style.display = "none";
        return;
      }

      path.style.display = "inline";
      arrowhead.style.display = "inline";

      // FINALLY, do the thing!
      path.setAttribute("stroke-dasharray", `1 ${linkStart} ${linkEnd - linkStart} ${pathLength}`);

      if (Array.from(activeLinks).includes(allLinks[allLinks.length - 1])) {
        clearArrowheadTimeout();
        arrowhead.style.opacity = "0";
        return;
      } else {
        clearArrowheadTimeout();

        arrowheadTimeout = setTimeout(() => {
          arrowhead.style.opacity = "1";
          arrowheadTimeout = null;
        }, 500);
      }

      const endPoint = path.getPointAtLength(linkEnd);
      const beforeEndPoint = path.getPointAtLength(Math.max(0, linkEnd - 1));

      const xDistance = Math.abs(endPoint.x - lastArrowPosition.x);

      const angle =
        (Math.atan2(endPoint.y - beforeEndPoint.y, endPoint.x - beforeEndPoint.x) * 180) / Math.PI;
      arrowhead.setAttribute(
        "transform",
        `translate(${endPoint.x - 5}, ${endPoint.y - 5}) rotate(${angle} 5 5)`,
      );

      if (xDistance > 0) {
        clearArrowheadTimeout();

        arrowhead.style.opacity = "0";

        arrowheadTimeout = setTimeout(() => {
          arrowhead.style.opacity = "1";
          lastArrowPosition = { x: endPoint.x, y: endPoint.y };
          arrowheadTimeout = null;
        }, 500);
      } else {
        lastArrowPosition = { x: endPoint.x, y: endPoint.y };
      }
    }
  </script>
</html>
