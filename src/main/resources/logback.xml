<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>true</withJansi>
    <encoder>
      <pattern
            >%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Your application logs -->
  <logger name="de.keyruu.homepage" level="INFO" />

  <!-- Root logger -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
