<style>
  footer {
    padding: 1.25em 1em;
    color: rgb(var(--gray));
    text-align: center;
  }
  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 720px;
    margin: 0 auto;
    flex-wrap: wrap;
    gap: 0.75em;
  }
  .copyright {
    margin: 0;
    font-size: 0.85rem;
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.75em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
    transition: color 0.2s ease;
  }
  .social-links a:hover {
    color: rgb(var(--gray-light));
  }
  @media (max-width: 720px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
