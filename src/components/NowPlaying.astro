---
// eslint-disable-next-line @typescript-eslint/no-unused-vars -- used in script tag below
import { initNowPlaying } from "./now-playing";

interface Props {
  scrobblerUrl: string;
  apiUrl: string;
}

const { scrobblerUrl, apiUrl } = Astro.props;
---

<div class="now-playing" data-api-url={apiUrl}>
  <div class="now-playing-inner">
    <div class="now-playing-cover-wrapper">
      <div class="skeleton skeleton-cover"></div>
      <img class="now-playing-cover" src="" alt="" width="48" height="48" style="display: none;" />
    </div>
    <div class="now-playing-info">
      <span class="now-playing-label">
        <span class="now-playing-bars">
          <span></span>
          <span></span>
          <span></span>
        </span>
        <span class="now-playing-status">loading...</span>
      </span>
      <p class="now-playing-track"><span class="skeleton skeleton-title"></span></p>
      <p class="now-playing-artist"><span class="skeleton skeleton-artist"></span></p>
    </div>
    <a class="now-playing-link" href={scrobblerUrl} target="_blank" rel="noopener noreferrer">
      view scrobbler
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  </div>
</div>

<style>
  .now-playing {
    margin-bottom: 2rem;
    border-radius: 12px;
    background: rgba(var(--gray-dark), 0.5);
    border: 1px solid rgba(255, 255, 255, 0.15);
    overflow: hidden;
    transition: opacity 0.3s ease;
  }

  .now-playing-inner {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.85rem 1.25rem;
  }

  .now-playing-cover-wrapper {
    flex-shrink: 0;
  }

  .now-playing-cover {
    width: 48px;
    height: 48px;
    border-radius: 6px;
    object-fit: cover;
  }

  .now-playing-info {
    flex: 1;
    min-width: 0;
  }

  .now-playing-label {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-family: "Satoshi", sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
  }

  .now-playing-bars {
    display: inline-flex;
    align-items: flex-end;
    gap: 2px;
    height: 12px;
  }

  .now-playing-bars span {
    display: block;
    width: 3px;
    background: var(--accent);
    border-radius: 1px;
    animation: bar-bounce 1s ease-in-out infinite;
  }

  .now-playing-bars span:nth-child(1) {
    height: 40%;
    animation-delay: 0s;
  }

  .now-playing-bars span:nth-child(2) {
    height: 70%;
    animation-delay: 0.15s;
  }

  .now-playing-bars span:nth-child(3) {
    height: 50%;
    animation-delay: 0.3s;
  }

  .now-playing.paused .now-playing-bars span {
    animation: none;
    height: 30%;
  }

  .now-playing.paused .now-playing-label {
    color: rgba(var(--gray), 0.6);
  }

  .now-playing.paused .now-playing-bars span {
    background: rgba(var(--gray), 0.6);
  }

  @keyframes bar-bounce {
    0%,
    100% {
      height: 30%;
    }
    50% {
      height: 100%;
    }
  }

  .now-playing-track {
    margin: 0.15rem 0 0 0;
    font-family: "Satoshi", sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(var(--gray-light));
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .now-playing-artist {
    margin: 0;
    font-family: "Satoshi", sans-serif;
    font-size: 0.8rem;
    color: rgba(var(--gray), 0.8);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .now-playing-link {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0.75rem;
    border-radius: 999px;
    font-family: "Satoshi", sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    border: 1px solid rgba(var(--gray), 0.2);
    color: rgb(var(--gray-light));
    white-space: nowrap;
    transition:
      border-color 0.2s ease,
      color 0.2s ease;
  }

  .now-playing-link:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  @media (max-width: 720px) {
    .now-playing-link span {
      display: none;
    }
  }

  .skeleton {
    display: inline-block;
    background: rgba(var(--gray), 0.2);
    border-radius: 4px;
    animation: skeleton-pulse 1.5s ease-in-out infinite;
  }

  .skeleton-title {
    width: 140px;
    height: 1em;
  }

  .skeleton-artist {
    width: 100px;
    height: 0.85em;
    margin-top: 0.4em;
  }

  .skeleton-cover {
    width: 48px;
    height: 48px;
    border-radius: 6px;
  }

  @keyframes skeleton-pulse {
    0%,
    100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>

<script>
  import { initNowPlaying } from "./now-playing";

  const container = document.querySelector(".now-playing");
  if (container instanceof HTMLElement) {
    initNowPlaying(container, container.dataset.apiUrl ?? "");
  }
</script>
