---
import HeaderLink from './HeaderLink.astro';
import { Image } from 'astro:assets';
import keyruuLogo from '../images/keyruu_logo.png';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <a class="" href="/"><Image src={keyruuLogo} alt="Keyruu" height="100" width="100" /></a>
    <!-- <h2><a href="/">{SITE_TITLE}</a></h2> -->
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 999;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(10, 10, 20, 0.7); /* dark transparent */
    border-bottom: 1px solid rgba(var(--gray), 0.2);
    padding: 0 1.5rem;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    height: 64px;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  h2 a {
    text-decoration: none;
    color: var(--accent);
    font-weight: bold;
    letter-spacing: 0.5px;
  }

  .internal-links {
    display: flex;
    gap: 1rem;
  }

  .internal-links a {
    padding: 0.5rem 0.25rem;
    font-weight: 500;
    color: rgba(220, 230, 245, 0.85); /* soft white-blue */
    position: relative;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .internal-links a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px; /* adjust if you want more/less space below text */
    width: 100%;
    height: 2px;
    background-color: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
  }

  .internal-links a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .internal-links a:active::after {
    transform-origin: right; /* makes it exit right on click */
  }

  /* .internal-links a { */
  /*   border-bottom: 2px solid transparent; */
  /*   text-decoration: none; */
  /*   transition: border 0.2s ease, color 0.2s ease; */
  /* } */
  /**/
  /* .internal-links a:hover { */
  /*   border-bottom: 2px solid var(--accent); */
  /*   color: var(--accent); */
  /* } */
  /**/
  /* .internal-links a.active { */
  /*   color: var(--accent); */
  /*   border-bottom: 2px solid var(--accent); */
  /* } */

  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      align-items: flex-start;
      height: auto;
      padding: 1rem 0;
    }

    .internal-links {
      flex-wrap: wrap;
      gap: 0.75rem 1rem;
    }
  }
</style>

