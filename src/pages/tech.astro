---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import { SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";
import ProjectCard from "../components/ProjectCard.astro";

const tech = await getCollection("tech");
const projects = await getCollection("projects");

const categories = [
  "language",
  "framework",
  "editor",
  "desktop",
  "monitoring",
  "infra",
  "cloud",
  "tool",
  "gear",
] as const;
const categoryLabels: Record<(typeof categories)[number], string> = {
  language: "Languages",
  framework: "Frameworks",
  editor: "Editor",
  desktop: "Desktop",
  monitoring: "Monitoring",
  infra: "Infrastructure",
  cloud: "Cloud",
  tool: "Tools",
  gear: "Gear",
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Tech - ${SITE_TITLE}`} description="Technologies and tools I use" />
    <style>
      main {
        width: 720px;
      }
      .section-title {
        font-family: "Satoshi", sans-serif;
        margin-bottom: 1.5rem;
      }
      .tech-category {
        margin-bottom: 1.5rem;
      }
      .tech-category:last-child {
        margin-bottom: 0;
      }
      .category-label {
        font-family: "Satoshi", sans-serif;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: rgba(var(--gray), 0.6);
        margin: 0 0 0.5rem 0;
      }
      .tech-items {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      .tech-item {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.75rem;
        background: rgba(var(--gray-dark), 0.8);
        border: 1px solid rgba(var(--gray), 0.15);
        border-radius: 6px;
        font-family: "Satoshi", sans-serif;
        font-size: 0.9rem;
        font-weight: 500;
        color: rgb(var(--gray-light));
        text-decoration: none;
        transition:
          border-color 0.2s ease,
          color 0.2s ease;
      }
      .tech-item:hover {
        border-color: var(--accent);
        color: var(--accent);
      }
      .tech-item img {
        width: 18px;
        height: 18px;
        border-radius: 0;
      }
      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
        margin-bottom: 2.5rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1 class="section-title">Projects</h1>
      <div class="projects-grid">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
      <h1 class="section-title">Tech</h1>
      {
        categories.map((cat) => {
          const items = tech.filter((t) => t.data.category === cat);
          return (
            items.length > 0 && (
              <div class="tech-category">
                <p class="category-label">{categoryLabels[cat]}</p>
                <div class="tech-items">
                  {items.map((t) =>
                    t.data.url ? (
                      <a
                        class="tech-item"
                        href={t.data.url}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {t.data.icon && <Image src={t.data.icon} alt="" width={18} height={18} />}
                        {t.data.name}
                      </a>
                    ) : (
                      <span class="tech-item">
                        {t.data.icon && <Image src={t.data.icon} alt="" width={18} height={18} />}
                        {t.data.name}
                      </span>
                    ),
                  )}
                </div>
              </div>
            )
          );
        })
      }
    </main>
    <Footer />
  </body>
</html>
